<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/JobRequestLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E1D9D9">

    <TextView
        android:id="@+id/textViewUName"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="250dp"
        android:text="TextView"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewUnEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewUName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="6dp"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewDetails"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewUnEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="244dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="26dp"
        android:text="User Job Request"
        android:textAlignment="center" />
</RelativeLayout>
