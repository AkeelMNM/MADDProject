<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyEditJobActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="@dimen/Add_job_TextBox_Width"
        android:layout_height="@dimen/Add_job_TextBox_height"
        android:layout_marginTop="35dp"
        android:text="@string/job_Category"
        android:textSize="@dimen/Add_job_TextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="@dimen/Add_job_select_box_Width"
        android:layout_height="@dimen/Add_job_select_box_height"
        android:layout_marginTop="12dp"
        android:dropDownWidth="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/Add_job_TextBox_Width"
        android:layout_height="@dimen/Add_job_TextBox_height"
        android:layout_marginTop="18dp"
        android:text="@string/job_title"
        android:textSize="@dimen/Add_job_TextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="@dimen/Add_job_select_box_Width"
        android:layout_height="@dimen/Add_job_select_box_height"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="@dimen/Add_job_TextBox_Width"
        android:layout_height="@dimen/Add_job_TextBox_height"
        android:layout_marginTop="18dp"
        android:text="@string/Work_place_address"
        android:textSize="@dimen/Add_job_TextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="@dimen/Add_job_TextBox_Width"
        android:layout_height="@dimen/Add_job_TextBox_height"
        android:layout_marginTop="18dp"
        android:text="@string/job_type"
        android:textSize="@dimen/Add_job_TextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="@dimen/Add_job_select_box_Width"
        android:layout_height="@dimen/Add_job_TextBox_height"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="@dimen/Add_job_TextBox_Width"
        android:layout_height="@dimen/Add_job_TextBox_height"
        android:layout_marginTop="18dp"
        android:text="@string/Salary"
        android:textSize="@dimen/Add_job_TextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner4" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="@dimen/Add_job_InputText_box_Width"
        android:layout_height="@dimen/Add_job_InputText_box_height"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoText="true"
            android:hint="80,000/-"
            android:inputType="number|numberDecimal"
            android:textSize="@dimen/Hint_TextSize" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="@dimen/Add_job_InputText_box_Width"
        android:layout_height="@dimen/Add_job_InputText_box_height"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Colombo 10"
            android:textSize="@dimen/Hint_TextSize" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="@dimen/Add_job_TextBox_Width"
        android:layout_height="@dimen/Add_job_TextBox_height"
        android:layout_marginTop="18dp"
        android:text="@string/Job_Description"
        android:textSize="@dimen/Add_job_TextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="@dimen/Add_job_InputText_box_Width"
        android:layout_height="@dimen/Add_job_InputText_box_height"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="********************* ******** ***********"
            android:textSize="@dimen/Hint_TextSize" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/Post_Job_btn"
        android:layout_width="@dimen/Post_Job_btn_width"
        android:layout_height="@dimen/Post_Job_btn_height"
        android:layout_marginTop="20dp"
        android:background="@color/Post_Job_btn"
        android:text="@string/Update_Job_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

    <Button
        android:id="@+id/button"
        android:layout_width="@dimen/Post_Job_btn_width"
        android:layout_height="@dimen/Post_Job_btn_height"
        android:layout_marginTop="15dp"
        android:background="@color/Cancel_Job_btn"
        android:text="@string/Cancel_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Post_Job_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>