<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/Cv1"
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="13dp"
        android:paddingStart="5dp"
        android:text="@string/Company_view_title"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Cv2"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Cv1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="292dp"
        android:paddingStart="5dp"
        android:text="@string/Company_view_Cname" />

    <TextView
        android:id="@+id/Cv3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Cv2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="299dp"
        android:layout_toEndOf="@+id/imageView"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:text="@string/Company_view_Address" />

    <TextView
        android:id="@+id/Cv4"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Cv3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="310dp"
        android:layout_marginTop="0dp"
        android:text="@string/Company_view_salary"
        android:textDirection="rtl" />

    <TextView
        android:id="@+id/Cv5"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Cv4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="339dp"
        android:layout_marginTop="2dp"
        android:text="@string/Company_view_JobType"
        android:textDirection="rtl" />

    <Button
        android:id="@+id/bEdit"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/Cv5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="208dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="3dp"
        android:backgroundTint="@color/View_List_Up_Color"
        android:text="@string/Company_View_Edit_btn"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btRemove"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/bEdit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="209dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="@color/View_List_Re_Color"
        android:text="@string/Company_View_Remove_btn"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Cv2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/location" />

</RelativeLayout>
